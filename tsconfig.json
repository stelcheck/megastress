{
  "compilerOptions": {
    "lib": ["es2015", "es2017"],
    "declaration": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "inlineSources": true,
    "inlineSourceMap": true,
    "baseUrl": "./",
    "paths": {
      "megadata": ["./node_modules/megadata/lib/index.ts"],
      "megadata/*": ["./node_modules/megadata/lib/*"],
      "shared/*": ["./src/shared/*"]
    }
  }
}
