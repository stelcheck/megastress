{
  "compilerOptions": {
    "lib": ["es2015", "es2017"],
    "declaration": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "inlineSources": true,
    "inlineSourceMap": true,
    "baseUrl": "./",
    "paths": {
      "test/*": ["./test/*"],
      "megadata": ["./node_modules/megadata/src/index.ts"],
      "megadata*": ["./node_modules/megadata/src/*"],
      "shared/*": ["./src/shared/*"]
    }
  }
}
